{
  "name": "@packages/utils",
  "version": "1.0.0",
  "description": "Shared utilities and schemas for the material extractor project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --config ../../jest.config.js --selectProjects=utils",
    "test:watch": "jest --config ../../jest.config.js --selectProjects=utils --watch",
    "test:coverage": "jest --config ../../jest.config.js --selectProjects=utils --coverage",
    "test:schemas": "npm run test -- --testPathPattern=api-schemas.test.ts",
    "type-check": "pnpm --filter @packages/types build && tsc --noEmit --skipLibCheck",
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "cd ../.. && npx eslint \"packages/utils/src/**/*.ts\" --fix"
  },
  "dependencies": {
    "@packages/types": "workspace:*",
    "dotenv": "^17.2.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "20.11.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "private": true
}
