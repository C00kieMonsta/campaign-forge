{
  "name": "@apps/backend",
  "version": "0.0.1",
  "description": "Backend API for material extractor",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm -F @packages/types build && pnpm -F @packages/utils build && pnpm db:generate && nest build --webpack && pnpm verify:build",
    "verify:build": "bash scripts/verify-build.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "pnpm --filter @packages/utils build && NODE_ENV=development RUN_API=true PORT=8001 nest start --watch -b swc -r tsconfig-paths/register -p tsconfig.dev.json",
    "start:debug": "pnpm --filter @packages/utils build && NODE_ENV=development RUN_API=true PORT=8001 nest start --debug --watch -b swc -r tsconfig-paths/register -p tsconfig.dev.json",
    "start:prod": "node dist/main",
    "lint": "cd ../.. && npx eslint \"apps/backend/src/**/*.ts\" --fix",
    "test": "jest --config ../../jest.config.js --selectProjects=backend",
    "test:watch": "jest --config ../../jest.config.js --selectProjects=backend --watch",
    "test:cov": "jest --config ../../jest.config.js --selectProjects=backend --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ../../jest.config.js --selectProjects=backend --runInBand",
    "test:e2e": "jest --config ../../jest.config.js --selectProjects=backend --testMatch='**/*.e2e-spec.ts'",
    "type-check": "pnpm --filter @packages/types build && pnpm --filter @packages/utils build && pnpm db:generate && tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:deploy:production": "prisma migrate deploy && echo 'âœ… Migrations applied with permissions'",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts",
    "schema": "prisma/schema.prisma"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "@google-cloud/documentai": "^8.0.0",
    "@google-cloud/storage": "^7.0.0",
    "@google/genai": "^1.16.0",
    "@google/generative-ai": "^0.2.1",
    "@mistralai/mistralai": "1.10.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/platform-ws": "11.1.8",
    "@nestjs/websockets": "^10.0.0",
    "@packages/types": "workspace:*",
    "@packages/utils": "workspace:*",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/jszip": "^3.4.1",
    "@types/multer": "^1.4.7",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "axios": "^1.6.0",
    "dotenv": "^17.2.1",
    "google-auth-library": "^9.0.0",
    "jsonwebtoken": "9.0.2",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "openai": "5.12.2",
    "pdf-lib": "1.17.1",
    "pg": "8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "tesseract.js": "7.0.0",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-transport": "^3.0.0",
    "ws": "8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "20.11.5",
    "@types/pg": "8.15.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
