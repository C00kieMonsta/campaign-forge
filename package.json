{
  "name": "campaign-forge",
  "private": true,
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "type-check": "pnpm --filter @packages/types run type-check && pnpm --filter @packages/utils run type-check && pnpm --filter @apps/backend run type-check",
    "test": "pnpm --filter @apps/backend test",
    "build:types": "pnpm --filter @packages/types build",
    "build:packages": "pnpm build:types",
    "build:backend": "pnpm --filter @apps/backend build",
    "dev:backend": "pnpm --filter @apps/backend start:dev",
    "dev:landing": "pnpm --filter landing dev",
    "dev:frontend": "pnpm --filter @apps/frontend dev",
    "build:landing": "pnpm --filter landing build",
    "build:frontend": "pnpm --filter @apps/frontend build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean-install": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && pnpm install"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "supportedArchitectures": {
      "libc": [
        "glibc",
        "musl"
      ]
    },
    "overrides": {
      "canvas": "npm:@napi-rs/canvas@0.1.71",
      "@types/react": "18.3.12",
      "@types/react-dom": "18.3.1",
      "@types/node": "20.11.5",
      "sharp": "0.33.5",
      "zod": "^3.24.4",
      "@expo/config-plugins": "~9.0.0",
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "react-test-renderer": "18.3.1"
    }
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.0"
  },
  "version": "1.0.0",
  "dependencies": {
    "zod-to-json-schema": "^3.24.6"
  }
}
